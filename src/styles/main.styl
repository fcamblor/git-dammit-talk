@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

$bd-title-bgcolor = #2f8cea

*
  font-family: 'Lato', sans-serif

.bd-title
  background: $bd-title-bgcolor

.bd-title-text
  h2
    color: white

.bd-tilde
  background: url('../images/tilde.svg')
  background-size: 100% 100%
  &.bespoke-backdrop-active
    opacity: 0.3

img
  max-height: 100%
  max-width: 100%


ul.column
  padding: 0

ul.column li
  flex: 1 1 0
  text-align: center


ul.inline
  display: flex
  flex-direction: row
  justify-content: space-between
  list-style-type: none
  padding: 0
  width: 100%

ul.inline li
  flex: 1 1 0
  text-align: center
