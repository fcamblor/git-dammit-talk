.murder
  background: #000

.murder::after
  content: "";
  background: url('../images/murder.jpg')
  opacity: 0.5;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;

.murder-text h1
  color: white
  font-family: 'Permanent Marker', cursive
  font-size: 6em
  padding: 10px
  text-shadow: 1px 1px 1px black
  border-radius: 10px

.murder-text .notes
  color: white
  text-shadow: 0 0 5px #000

.meta-left,
.meta-right
  position: absolute
  bottom: 20px
  padding: 20px
  white-space: nowrap
  width: 50%
  height: 25%
  *
    color: white
    font-size: 1.5rem
    .murder-text &
      color: white;
      text-shadow: 0 0 10px #000

.meta-left
  left: 0
  text-align: left
  .logo-ineat
    width: 150px

.meta-right
  right: 0
  text-align: right
  padding-top: 10%

.icon
  max-height: 24px
  max-width: 24px
  display: inline-block
  vertical-align: middle
  left: 8px
  margin-right: 8px

.red
  color: #DD0000
  font-weight: bold

.green
  color: #009900
  font-weight: bold
